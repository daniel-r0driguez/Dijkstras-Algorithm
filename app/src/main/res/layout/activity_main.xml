                app:buildingName="V Building"
                app:rotation="0"
                app:textColor="#FF0000"
                app:textSize="60"
                tools:layout_editor_absoluteX="395dp"
                tools:layout_editor_absoluteY="195dp" />

            <com.example.cs003b_finalproject.BuildingView
                android:id="@+id/r_building"
                android:layout_width="122dp"
